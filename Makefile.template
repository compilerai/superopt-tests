  $(EQCHECKER_I386_GCC_O3_XML_FILES) \
  $(EQCHECKER_I386_CLANG_O3_XML_FILES) \
  $(EQCHECKER_X64_GCC_O3_XML_FILES) \
  $(EQCHECKER_X64_CLANG_O3_XML_FILES)


ALL_PROGS = $(EQCHECKER_PROGS) $(BC_PROGS_ASM) $(XML_FILES)

# targets

all: $(ALL_PROGS)
	# HACK for current build
	$(foreach t,$(BC_O0_PROGS),sed -i 's/immarg//g' $(t).s;)

clean:
	rm -f *.o *.tmp $(ALL_PROGS)

eqtest:: $(ALL_PROGS)
	echo "" > eqtest_chaperon_commands
	for prog in $(PROGS_EQCHECKER_COMPILER) ; do \
		echo "python $(SUPEROPT_PROJECT_DIR)/superopt/utils/eqbin.py $(VPATH)/$$prog.c `pwd`/$$prog.$(GCC_I386_O3_SUFFIX) `pwd`/$$prog.$(CLANG_I386_O3_SUFFIX)" >> eqtest_chaperon_commands;\
	done
	for prog in $(PROGS_EQCHECKER_SRC_DST) ; do \
		echo "python $(SUPEROPT_PROJECT_DIR)/superopt/utils/eqbin.py `pwd`/$${prog}_src.c `pwd`/$${prog}_dst.$(GCC_I386_O3_SUFFIX) `pwd`/$${prog}_dst.${CLANG_O3_SUFFIX}" >> eqtest_chaperon_commands;\
	done

